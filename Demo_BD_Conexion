package formularios;
import java.awt.Component;
import java.sql.SQLException;

import javax.swing.JOptionPane;
import java.sql.DriverManager;
import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.Statement;

public class Formulario_registro extends javax.swing.JFrame {

    private Connection conexion;
    private Statement st;
    private ResultSet rs;

    public void Conectar() {
        try {
            conexion = DriverManager.getConnection("jdbc:mysql://localhost/demo_proyecto", "root", "alexisandres");
            st = conexion.createStatement();

            rs = st.executeQuery("Select * from productos");

            rs.next();

            this.jtf_id_producto.setText(rs.getString("id_producto"));                         
            this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
            this.jcb_marca.setSelectedItem(rs.getString("marca"));
            this.jtf_existencia.setText(rs.getString("existencia"));
            
        } catch (SQLException err) {
            JOptionPane.showMessageDialog(null, "Error " + err.getMessage());
        }
    }

