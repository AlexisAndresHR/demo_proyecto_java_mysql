// Botones de movimiento a traves de los registros.
    private void primerRegistro() {
        try {
            if (rs.isFirst() == false) {
                rs.first(); //Primer registro

                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jcb_marca.setSelectedItem(rs.getString("marca"));
                this.jtf_existencia.setText(rs.getString("existencia"));
            }
        } catch (Exception err) {
            JOptionPane.showMessageDialog(null, "Error " + err.getMessage());
        }
    }

    private void ultimoRegistro(){
        try {
            if (rs.isLast() == false) {
                rs.last(); //Último registro

                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jcb_marca.setSelectedItem(rs.getString("marca"));
                this.jtf_existencia.setText(rs.getString("existencia"));
            }
        } catch (Exception err) {
            JOptionPane.showMessageDialog(null, "Error " + err.getMessage());
        }
    }
    
    private void anteriorRegistro(){
        try {
            if (rs.isFirst() == false) {
                rs.previous(); //Registro anterior

                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jcb_marca.setSelectedItem(rs.getString("marca"));
                this.jtf_existencia.setText(rs.getString("existencia"));
            }
        } catch (Exception err) {
            JOptionPane.showMessageDialog(null, "Error " + err.getMessage());
        }
    }
        
    private void siguienteRegistro(){
        try{
            if(rs.isLast()==false) {
                rs.next(); // Siguiente registro 
                
                this.jtf_id_producto.setText(rs.getString("id_producto"));                         
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jcb_marca.setSelectedItem(rs.getString("marca"));
                this.jtf_existencia.setText(rs.getString("existencia"));
            }
        } catch(Exception err) {
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage());
        }
    }
    
// Botones de modificacion.   
    private void guadarRegistro() {        
        try{
            int id_producto;
            id_producto = Integer.parseInt(this.jtf_id_producto.getText());
            if (id_producto == 0) {
                String nombre_producto = this.jtf_nombre_producto.getText();
                String marca = (String) this.jcb_marca.getSelectedItem(); 
                int existencia;
                existencia = Integer.parseInt(this.jtf_existencia.getText());
                
                st.executeUpdate("INSERT INTO productos (nombre_producto, marca, existencia)"+" VALUES ('"+ nombre_producto +"','"+ marca +"',"+ existencia +");");
                
                this.Conectar();
                this.ultimoRegistro();
            }
            else {
                String nombre_producto = this.jtf_nombre_producto.getText();
                String marca = (String) this.jcb_marca.getSelectedItem(); 
                int existencia;
                existencia = Integer.parseInt(this.jtf_existencia.getText());
                
                st.executeUpdate("UPDATE productos SET nombre_producto = '"+ nombre_producto +"', marca = '"+ marca +"', existencia = "+ existencia +" WHERE id_producto = "+ id_producto +";");
                
                this.Conectar();
                this.ultimoRegistro();
            }
            for (Component component : jp_datos.getComponents()) { //Deshabilita el panel de llenado de datos.
                component.setEnabled(false); 
            }
            for (Component component : jp_controles_movimiento.getComponents()) { //Habilita el panel de controles de movimiento.
                component.setEnabled(true); 
            }
            this.jb_guardar.setEnabled(false); //Deshabilita el boton "Guardar".
            this.jb_cancelar.setEnabled(false); //Deshabilita el boton "Cancelar".
            this.jb_borrar.setEnabled(false); //Deshabilita el boton "Borrar".
            this.jb_nuevo.setEnabled(true); //Habilita el boton "Nuevo".
            this.jb_modificar.setEnabled(true); //Habilita el boton "Modificar".
        }
        catch(SQLException err) { 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        }
    }
    
    private void borrarRegistro(){
        try{ 
            st.executeUpdate("DELETE FROM productos WHERE id_producto="+this.jtf_id_producto.getText());

            this.Conectar();
            this.primerRegistro();
        }
        catch(SQLException err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        } 
    }
    
    private void nuevoRegistro() {
        try{
            for (Component component : jp_datos.getComponents()) { // Habilita el panel de llenado de datos.
                component.setEnabled(true); 
            }
            for (Component component : jp_controles_movimiento.getComponents()) { // Deshabilita el panel de controles de movimiento.
                component.setEnabled(false); 
            }
            this.jb_nuevo.setEnabled(false); // Deshabilita botones "Nuevo" y "Modificar".
            this.jb_modificar.setEnabled(false);
            this.jb_guardar.setEnabled(true); // Habilita botones "Guardar" y "Cancelar".
            this.jb_cancelar.setEnabled(true);
            
            //Limpia los jtf's para escribir en ellos (4).
            this.jtf_id_producto.setText("0");
            this.jtf_nombre_producto.setText("");
            this.jcb_marca.setSelectedItem("Coca Cola");
            this.jtf_existencia.setText("");
        }
        catch(Exception err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        }
    }
    
    private void modificarRegistro(){ // Boton jb_modificar.
        try{ 
            for (Component component : jp_datos.getComponents()) { // Habilita el panel de llenado de datos.
                component.setEnabled(true); 
            }
            this.jb_nuevo.setEnabled(false); // Deshabilita botones "Nuevo" y "Modificar". (2)
            this.jb_modificar.setEnabled(false);
            this.jb_borrar.setEnabled(true); // Habilita botones "Borrar", "Guardar" y "Cancelar". (3)
            this.jb_guardar.setEnabled(true);
            this.jb_cancelar.setEnabled(true);
        }
        catch(Exception err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        } 
    }
    
    private void cancelarRegistro(){ // Boton jb_cancelar.
        try{ 
            for (Component component : jp_datos.getComponents()) { // Deshabilita el panel de llenado de datos.
                component.setEnabled(false); 
            }
            this.jb_nuevo.setEnabled(true); // Habilita botones "Nuevo" y "Modificar". (2)
            this.jb_modificar.setEnabled(true);
            this.jb_borrar.setEnabled(false); // Deshabilita botones "Borrar", "Guardar" y "Cancelar". (3)
            this.jb_guardar.setEnabled(false);
            this.jb_cancelar.setEnabled(false);
            for (Component component : jp_controles_movimiento.getComponents()) { // Habilita el panel de controles de movimiento.
                component.setEnabled(true); 
            }
            this.primerRegistro();
        }
        catch(Exception err){ 
            JOptionPane.showMessageDialog(null,"Error "+err.getMessage()); 
        }
    }
    
    private void jb_primeroMouseClicked(java.awt.event.MouseEvent evt) {                                        
        this.primerRegistro();
    }                                       

    private void jb_ultimoMouseClicked(java.awt.event.MouseEvent evt) {                                       
        this.ultimoRegistro();
    }                                      

    private void jb_anteriorMouseClicked(java.awt.event.MouseEvent evt) {                                         
        this.anteriorRegistro();
    }                                        

    private void jb_siguienteMouseClicked(java.awt.event.MouseEvent evt) {                                          
        this.siguienteRegistro();
    }                                         

    
//Acciones botones de modificacion.
    private void jb_guardarMouseClicked(java.awt.event.MouseEvent evt) {                                        
        this.guadarRegistro();
    }                                       

    private void jb_borrarMouseClicked(java.awt.event.MouseEvent evt) {                                       
        this.borrarRegistro();
    }                                      

    private void jb_nuevoMouseClicked(java.awt.event.MouseEvent evt) {                                      
        this.nuevoRegistro();
    }                                     

    private void jb_modificarMouseClicked(java.awt.event.MouseEvent evt) {                                          
        this.modificarRegistro();
    }                                         

    private void jb_cancelarMouseClicked(java.awt.event.MouseEvent evt) {                                         
        this.cancelarRegistro();
    }                                        

